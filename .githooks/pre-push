#!/usr/bin/env node

const { exec } = require('child_process');
console.log('Checking for coverage');
exec('npm run test:coverage', (error, stdout, stderr) => {
  if (error) {
    console.log(`ðŸ“• error: ${error.message}`);
    process.exit(1);
  }
  if (stderr) {
    console.log(`ðŸ“• stderr: ${stderr}`);
    process.exit(1);
  }
  console.log(`ðŸ“— stdout: ${stdout}`);
  console.log('Coverage test passed, pushing branch...');
  process.exit(0);
});
